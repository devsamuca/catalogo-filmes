    <main>

        <% for(let i=0; i < filmesSeries.length; i++) { %>

            <div class="filmes">

                <section class="link-info-filme">

                    <% let parametro; if (filmesSeries[i].title !=null) { parametro='movie' ; } else { parametro='tv' ;
                        } %>


                        <a class="link-info" href="/<%= parametro%>/<%= filmesSeries[i].id %>">
                            <img class="img-filmes"
                                src="https://image.tmdb.org/t/p/w500/<%= filmesSeries[i].poster_path %>"
                                alt="<%= filmesSeries[i].name %> <%= filmesSeries[i].title %>">

                            <div class="info-filme">
                                <p>
                                    <%= filmesSeries[i].title %>
                                        <%= filmesSeries[i].name %>
                                </p>
                                <p>
                                    
                                    <%= filmesSeries[i].release_date %>
                                        <%= filmesSeries[i].first_air_date %>
                                </p>
                                <p>
                                    <% let generosFilmesSeries=[] 
                                    for(let j=0; j < filmesSeries[i].genre_ids.length; j++){
                                         generosFilmesSeries.push(idsGeneros.get(filmesSeries[i].genre_ids[j]))
                                    } %>
                                            <%= generosFilmesSeries.join(' - ') %>
                                </p>
                            </div>
                        </a>

                </section>
                <p class="nome-filme">
                    <%= filmesSeries[i].name %>
                        <%= filmesSeries[i].title %>
                </p>
            </div>
            <% } %>

    </main>

